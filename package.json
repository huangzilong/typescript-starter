{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "typescript starter",
  "main": "index.js",
  "repository": "https://github.com/huangzilong/typescript-starter",
  "author": "huangzilongg@gmail.com",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "serve": "node ./dist/app.js",
    "prebuild": "rimraf dist",
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "dev": "tsc -w",
    "lint": "eslint \"**/*.{js,ts}\" --quiet --fix",
    "test": "jest --forceExit --coverage --verbose --passWithNoTests",
    "watch-test": "npm run test -- --watchAll"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/eslint": "^6.1.3",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "jest": "^24.9.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  }
}
